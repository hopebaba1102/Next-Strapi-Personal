{
  "name": "mxd.codes",
  "description": "Personal Website",
  "author": "Max Dietrich",
  "version": "2.1.0",
  "license": "MIT",
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "scripts": {
    "dev": "next",
    "start": "next start",
    "build": "next build",
    "deploy": "git pull && npm run build && pm2 restart mxd-codes-frontend",
    "export": "next export",
    "generate-manifest": "node ./lib/manifest.js",
    "img-optimize": "py ./utils/resize_images.py",
    "lint": "eslint --fix .",
    "format": "prettier --write './**/*.{js,jsx,css,json}' --config .prettierrc",
    "count": "cloc --exclude-ext=svg --exclude-dir=animation-data,node_modules,.next --json components/ lib/ pages/ styles/ public/ . > lib/data/count_total.json",
    "webmention": "webmention https://mxd.codes/feed.xml --limit 0 --send"
  },
  "dependencies": {
    "@remy/webmention": "^1.4.5",
    "@socialgouv/matomo-next": "^1.1.2",
    "axios": "^0.21.1",
    "cloc": "^2.7.0",
    "d3": "^6.5.0",
    "d3-geo": "^2.0.1",
    "date-fns": "2.17.0",
    "globby": "^11.0.2",
    "leaflet": "^1.7.1",
    "next": "^10.0.7",
    "next-compose-plugins": "^2.2.1",
    "next-fonts": "^1.5.1",
    "preact": "^10.5.12",
    "preact-compat": "^3.19.0",
    "preact-render-to-string": "^5.1.12",
    "prettier": "2.2.1",
    "prismjs": "^1.23.0",
    "react": "github:preact-compat/react#1.0.0",
    "react-dom": "github:preact-compat/react-dom#1.0.0",
    "react-emoji-render": "^1.2.4",
    "react-icons": "^4.2.0",
    "react-markdown": "^5.0.3",
    "react-palette": "^1.0.2",
    "react-router-dom": "^5.2.0",
    "react-tooltip": "^4.2.14",
    "remark": "13.0.0",
    "remark-html": "13.0.1",
    "remark-slug": "^6.0.0",
    "send-webmention": "^2.0.0",
    "showdown": "^1.9.1",
    "slugify": "^1.4.6",
    "styled-components": "5.2.1",
    "styled-media-query": "^2.1.2",
    "topojson-client": "^3.1.0",
    "webpack": "4.6.0"
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-nextjs": "1.0.7",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-html": "6.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "pretty-quick": "^3.1.0"
  }
}
